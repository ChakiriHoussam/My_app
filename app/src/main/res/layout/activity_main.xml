<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6200EA"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtMonQuize"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="MON QUIZ"
        android:textAlignment="center"
        android:textColor="#FCFFEE34"
        android:textSize="35sp" />

    <FrameLayout
        android:id="@+id/fragmentHolder"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/txtMonQuize"
        android:layout_marginTop="10dp"
        android:background="@color/colorbackground" />

    <TextView
        android:id="@+id/txt_chapter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragmentHolder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Select Chapter."
        android:textColor="#FDFDFD"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text_view_highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_start_quiz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Highscore : 0"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button_start_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="DÃ©marrer le Quiz" />


</RelativeLayout>